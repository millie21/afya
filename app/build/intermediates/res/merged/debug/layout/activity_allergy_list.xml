<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="6dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="6dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:id="@+id/alagytyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Allergy Type"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/input_login_hint"
            android:layout_marginTop="10dp"

            ></View>





        <TextView
            android:textSize="12dp"
            android:id="@+id/alagytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" "
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">







        <TextView
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/alagynam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergy Name "

            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/input_login_hint"
            android:layout_marginTop="10dp"

            ></View>



        <TextView
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/alagyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "

            />


</LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">







        <TextView
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/alagydat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date "

            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/input_login_hint"
            android:layout_marginTop="10dp"

            ></View>



        <TextView
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/alagydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "

            />

    </LinearLayout>


</LinearLayout>