<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="afyapepe.mobile.activity.Drug">
<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardBackgroundColor="#ffffff">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <TableRow
            android:layout_height="25dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:id="@+id/tb1"

            >
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="15dp"
                android:layout_gravity="top|left"
                android:src="@drawable/ic_bookmark_black_24dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name :"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/mat"
                android:id="@+id/tvposition1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="norway"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/makate"
                android:id="@+id/tvposition"
                />

        </TableRow>

        <TableRow
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:id="@+id/tb2"

            android:layout_below="@+id/tb1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Drugname:"
                android:id="@+id/tvname21"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/mat"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Pharmacy3 :"
                android:id="@+id/tvid"
                android:textColor="@color/makate"
                android:textStyle="bold"

                android:layout_marginRight="5dp"/>

        </TableRow>

        <TableRow
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:id="@+id/tb3"
            android:visibility="gone"
            android:layout_below="@+id/tb2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Id:"
                android:id="@+id/tvname213"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Pharmacy3 :"
                android:id="@+id/tvpos"
                android:textColor="#16ae90"
                android:textStyle="bold"

                android:layout_marginRight="155dp"/>

        </TableRow>
        <TableRow
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:id="@+id/tb4"
            android:layout_below="@+id/tb3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Total(millions):"
                android:id="@+id/tvname214"
                android:paddingTop="0dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/mat"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Pharmacy3 :"
                android:id="@+id/tvid2"
                android:textColor="@color/makate"
                android:textStyle="bold"

                android:layout_marginRight="5dp"/>

        </TableRow>

    </RelativeLayout>
</android.support.v7.widget.CardView>

</FrameLayout>