<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="afyapepe.mobile.fragment.ManuByDrug"
    tools:showIn="@layout/activity_manubydrug"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#ffffff"
            android:onClick="card_view1"
            >
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ct"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:divider="@null"
                android:dividerHeight="10.0sp"
                android:id="@+id/listview11"
                android:visibility="gone"
                />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tb1"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/centerShim"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="County:"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"/>
                    <TextView

                        android:text="Mombasa"
                        android:id="@+id/tvposition"
                        android:layout_marginTop="10dp"
                        android:textColor="#16ae90"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        />

                </TableRow>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp"
            android:layout_below="@id/card_view1"
            card_view:cardBackgroundColor="#ffffff"
            android:onClick="card_view2">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tb2"
                    android:layout_alignParentRight="true"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="County:"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"/>
                    <TextView

                        android:text="Kwale"
                        android:layout_marginTop="10dp"
                        android:textColor="#16ae90"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        />

                </TableRow>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp"
            android:layout_below="@id/card_view2"
            card_view:cardBackgroundColor="#ffffff"
            android:onClick="card_view3">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="County:"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"/>
                    <TextView

                        android:text="Kilifi"
                        android:layout_marginTop="10dp"
                        android:textColor="#16ae90"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        />

                </TableRow>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="4dp"
            android:layout_below="@id/card_view3"
            card_view:cardBackgroundColor="#ffffff"
            android:onClick="card_view4">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TableRow
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tb4"
                    android:layout_alignParentRight="true"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="County:"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"/>
                    <TextView

                        android:text="Tana River"
                        android:layout_marginTop="10dp"
                        android:textColor="#16ae90"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        />

                </TableRow>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>