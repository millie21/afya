<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cd4"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        android:layout_below="@+id/cd3"
        card_view:cardBackgroundColor="#ffffff">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_assessment_black_18dp"
                android:layout_margin="5dp"
                android:id="@+id/img4"

                />
            <View
                android:id="@+id/centerShim4"
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:visibility="visible"
                android:layout_margin="15dp"/>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:id="@+id/tb9"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/centerShim4"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="Company :"
                    android:id="@+id/tvposition1d"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/mat"
                    android:layout_marginRight="5dp"
                    android:textAllCaps="true"/>
                <TextView

                    android:text="GlaxoSmithKline Pharmaceutical Kenya Limited"
                    android:id="@+id/tvpositiond"
                    android:layout_marginTop="5dp"
                    android:textColor="#16ae90"
                    android:textStyle="bold"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total :"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:id="@+id/tvid1d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/norway"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/makate"
                    android:visibility="gone"
                    android:id="@+id/tvname2d"
                    />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:id="@+id/tb10"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/centerShim4"
                android:layout_below="@+id/tb9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="Quantity :"
                    android:id="@+id/tvname21d"
                    android:paddingTop="10dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textAllCaps="true"
                    android:textColor="@color/mat"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="0"
                    android:id="@+id/tvidd"
                    android:textColor="@color/makate"
                    android:visibility="visible"
                    android:textAllCaps="true"
                    android:layout_marginRight="45dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/centerShim4"
                android:layout_below="@+id/tb10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/mat"
                    android:visibility="visible"
                    android:id="@+id/tvid11d"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="(Ksh.):"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/mat"
                    android:visibility="visible"
                    android:id="@+id/tvid111d"
                    android:textAllCaps="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"

                    android:visibility="visible"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/makate"
                    android:id="@+id/tvname22d"
                    android:textAllCaps="true"
                    />
            </TableRow>
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
