<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_manu_competition_view"
    >

    <View
        android:id="@+id/centerShim"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/centerShim"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        android:onClick="cardview"
        card_view:cardBackgroundColor="@color/ma">

        <ImageButton
            android:id="@+id/btLeft"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            android:src="@drawable/ic_shopping_cart_white_24dp"
            android:background="@color/ma"
            android:layout_gravity="top"
            android:layout_margin="5dp"
            android:onClick="cardview"
            android:text="Left Button" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="bottom"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:onClick="cardview"
            android:text="Sales" />

    </android.support.v7.widget.CardView>
    <!--Same deal, but on the right -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/centerShim"
        android:layout_below="@+id/card_view0"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        android:onClick="cardview2"
        card_view:cardBackgroundColor="@color/makat">
        <ImageButton
            android:id="@+id/btRight"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            android:src="@drawable/ic_place_white_24dp"
            android:background="@color/makat"
            android:layout_margin="5dp"
            android:onClick="cardview2"
            android:layout_gravity="top"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="bottom"
            android:textColor="#ffff"
            android:onClick="cardview2"
            android:textStyle="bold"
            android:text="Region"


            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/centerShim"
        card_view:cardCornerRadius="2dp"
        android:layout_below="@+id/card_view"
        android:layout_margin="5dp"
        android:onClick="cardview3"
        card_view:cardBackgroundColor="@color/maka">

        <ImageButton
            android:id="@+id/btLeft2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            android:src="@drawable/ic_people_white_24dp"
            android:background="@color/maka"
            android:layout_margin="5dp"
            android:layout_gravity="top"
            android:onClick="cardview3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:text="Doctors"
            android:onClick="cardview3"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/centerShim"
        android:layout_below="@+id/card_view2"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        android:onClick="cardview4"
        card_view:cardBackgroundColor="@color/mak">
        <ImageButton
            android:id="@+id/btRight2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            android:src="@drawable/ic_local_hospital_white_24dp"
            android:background="#5AB2EC"
            android:layout_margin="5dp"
            android:onClick="cardview4"
            android:text="Left Button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:onClick="cardview4"
            android:text="Drugs"

            />
    </android.support.v7.widget.CardView>

</RelativeLayout>