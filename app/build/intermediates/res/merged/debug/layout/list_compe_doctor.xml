<?xml version="1.0" encoding="utf-8"?>
<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#ffffff">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="25dp"
            android:src="@drawable/ic_assessment_black_18dp"
            />
        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:visibility="visible"
            android:layout_margin="15dp"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:id="@+id/tb1"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Name :"
                android:textAllCaps="true"
                android:id="@+id/tvposition1"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/mat"
                android:layout_marginRight="5dp"/>
            <TextView

                android:text="Dr. NGARE STANLEY MURUIKI"
                android:id="@+id/tvposition"
                android:layout_marginTop="0dp"
                android:textColor="#16ae90"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"

                />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_below="@+id/tb1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Quantity :"
                android:id="@+id/tvname21"
                android:paddingTop="0dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/mat"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Pharmacy3 :"
                android:id="@+id/tvid"
                android:textColor="@color/makate"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total:"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:gravity="bottom|end"
                android:visibility="gone"
                android:textColor="@color/mat"
                android:id="@+id/tvid1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="norwaysss"
                android:layout_marginTop="0dp"
                android:gravity="bottom|end"
                android:layout_marginLeft="5dp"
                android:textColor="@color/makate"
                android:id="@+id/tvname2"
                />

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="amstada2"
            android:id="@+id/tvname3"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"/>


        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="@android:style/TextAppearance.Small"-->
        <!--android:text="amstadam"-->
        <!--android:id="@+id/tvposition"-->
        <!--android:paddingTop="10dp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="55dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvname25"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:text="norway"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:textColor="#16ae90"-->
        <!--android:id="@+id/tvid"-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvpos"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>

