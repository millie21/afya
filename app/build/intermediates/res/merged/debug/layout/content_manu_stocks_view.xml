<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_manu_by_drug"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="afyapepe.mobile.activity.ManuStocksView"
    tools:showIn="@layout/activity_manu_stocks_view">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/ct"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounderb"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:id="@+id/testing1222"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Total items:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_toRightOf="@+id/testing1222"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:id="@+id/testing12"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="0"/>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ct"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:divider="@null"
        android:dividerHeight="10.0sp"
        android:id="@+id/listview11"
        />

</RelativeLayout>
