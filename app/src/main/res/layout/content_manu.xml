<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
   >
    <!--tools:showIn="@layout/activity_manufacturers" >-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Welcome:"
        android:layout_toRightOf="@+id/centerShim"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:id="@+id/welcome5"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"

        />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view0"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="14dp"
        android:layout_centerHorizontal="true"
        card_view:cardBackgroundColor="#fff"
        android:layout_below="@+id/textView2"
        card_view:cardElevation="4dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:elevation="4dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounder"
            android:src="@drawable/ic_account_circle_white_36dp"
            android:layout_margin="10dp"/>

        <View
            android:id="@+id/centerShimy"
            android:layout_height="90dp"
            android:layout_width="1dp"
            android:layout_marginLeft="60dp"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/mat"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Welcome:"
            android:layout_toRightOf="@+id/centerShim"
            android:layout_marginLeft="65dp"
            android:layout_below="@+id/iv1"
            android:id="@+id/welcome"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="20dp"
            android:textColor="@color/makate5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="65dp"
            android:layout_below="@+id/welcome"
            android:id="@+id/name"
            android:textColor="@color/makate5"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="70dp"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="65dp"
            android:textColor="@color/makate5"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/email"

            />

    </android.support.v7.widget.CardView>

        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerShim"
            card_view:cardCornerRadius="1dp"
            android:layout_margin="5dp"
            android:onClick="cardview"
            card_view:cardElevation="4dp"
            android:layout_below="@+id/card_view0"
            card_view:cardBackgroundColor="@color/white">

            <ImageButton
                android:id="@+id/btLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/centerShim"
                android:src="@drawable/ic_shopping_cart_white_24dp"
                android:background="@drawable/rounderg"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:onClick="cardview"
                android:elevation="4dp"
                android:text="Left Button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|bottom"
                android:textColor="@color/manugreen"
                android:onClick="cardview"
                android:textAllCaps="true"
                android:text="Sales" />

        </android.support.v7.widget.CardView>
