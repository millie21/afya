<?xml version="1.0" encoding="utf-8"?>
    <!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="25dp"
            android:src="@drawable/ic_assessment_black_18dp"
            />
        <View
            android:id="@+id/centerShim"
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:visibility="visible"
            android:layout_margin="15dp"/>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="0dp"
    android:id="@+id/tb1"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/centerShim"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="id : "
            android:visibility="gone"
            android:id="@+id/tvposition1"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="amstadam"
            android:id="@+id/tvposition"
            android:textColor="#16ae90"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dr. Name :"
            android:paddingTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/mat"
            android:id="@+id/tvid1"
            android:textAllCaps="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="norway"
            android:layout_marginLeft="5dp"
            android:textColor="@color/makate"
            android:textAllCaps="true"
            android:id="@+id/tvid"
            />
</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_below="@+id/tb1"
            android:id="@+id/tb2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Prescribed Drug:"
                android:textAllCaps="true"
                android:id="@+id/tvposition2"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/mat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="amstadamamstadam"
            android:textAllCaps="true"
            android:id="@+id/tvid8"
            android:textColor="@color/makate"
            android:paddingTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:visibility="gone"
            android:id="@+id/tvpos288"
            android:textColor="#16ae90"
            android:textStyle="bold"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_below="@+id/tb2"
            android:id="@+id/tb3"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Substitute Drug  :"
                android:textAllCaps="true"
                android:id="@+id/tvposition3"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/mat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="abcdefgh"
                android:id="@+id/tvid10"
                android:textAllCaps="true"
                android:textColor="@color/makate"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@+id/tb3"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerShim"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="Pharmacy:"
                android:textAllCaps="true"
                android:id="@+id/tvposition28"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/mat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="KALYET CHEMIST BARATON"
                android:id="@+id/tvpos5"
                android:textAllCaps="true"
                android:textColor="@color/makate"
                android:paddingTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Quantity: "
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:layout_gravity="bottom|end"
                android:textColor="@color/mat"
                android:id="@+id/tvid9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total : "
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:layout_gravity="bottom|end"
                android:textColor="#000"
                android:visibility="gone"
                android:id="@+id/tvid5"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="small_text"
                android:visibility="gone"
                android:id="@+id/tvpos2"
                android:textColor="#16ae90"
                android:textStyle="bold"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="5dp"/>
        </TableRow>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvname"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvpos"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvname3"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvpos3"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="small_text"
            android:id="@+id/tvpos4"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>

