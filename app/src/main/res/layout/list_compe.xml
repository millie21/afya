<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="visible"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#ffffff">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_assessment_black_18dp"
                    android:layout_margin="5dp"

                    />
                <View
                    android:id="@+id/centerShim"
                    android:layout_height="match_parent"
                    android:layout_width="2dp"
                    android:visibility="visible"
                    android:layout_margin="15dp"/>
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tb1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/centerShim"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="Company :"
                        android:id="@+id/tvposition1"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"
                        android:textAllCaps="true"/>
                    <TextView

                        android:text="GlaxoSmithKline Pharmaceutical Kenya Limited"
                        android:id="@+id/tvposition"
                        android:layout_marginTop="5dp"
                        android:textColor="#16ae90"
                        android:textStyle="bold"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Total :"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:visibility="gone"
                        android:id="@+id/tvid1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="norway"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/makate"
                        android:visibility="gone"
                        android:id="@+id/tvname2"
                        />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:id="@+id/tb2"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/centerShim"
                    android:layout_below="@+id/tb1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="Quantity :"
                        android:id="@+id/tvname21"
                        android:paddingTop="10dp"
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textAllCaps="true"
                        android:textColor="@color/mat"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:text="0"
                        android:id="@+id/tvid"
                        android:textColor="@color/makate"
                        android:visibility="visible"
                        android:textAllCaps="true"
                        android:layout_marginRight="45dp"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/centerShim"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/tb2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Total"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:textStyle="bold"
                        android:textColor="@color/mat"
                        android:visibility="visible"
                        android:id="@+id/tvid11"
                        android:textAllCaps="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="(Ksh.):"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/mat"
                        android:visibility="visible"
                        android:id="@+id/tvid111"
                        android:textAllCaps="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="0"
                        android:visibility="visible"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/makate"
                        android:id="@+id/tvname22"
                        android:textAllCaps="true"
                        />

                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="amstada2"
                    android:id="@+id/tvname3"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="55dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="small_text"
                    android:id="@+id/tvname25"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="small_text"
                    android:id="@+id/tvpos"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_marginLeft="65dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
