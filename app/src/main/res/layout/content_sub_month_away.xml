<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="afyapepe.mobile.activity.SubMonthAway"
    tools:showIn="@layout/activity_sub_month_away">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/ct"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounderb"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:id="@+id/testing1222"
            android:textSize="20dp"
            android:text="Total items:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_toRightOf="@+id/testing1222"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:id="@+id/testing12"
            android:textSize="20dp"
            android:text="0"/>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:divider="@null"
        android:dividerHeight="10.0sp"
        android:id="@+id/listview11"
        />
    <Button
        android:id="@+id/empty_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data is available"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        tools:layout_editor_absoluteY="217dp"
        tools:layout_editor_absoluteX="104dp" />
</RelativeLayout>
