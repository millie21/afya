                android:layout_height="match_parent"
                android:onClick="pharm1"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:id="@+id/tb1a"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/centerShim"

                >



