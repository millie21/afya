                    android:layout_marginLeft="5dp"
                    android:textColor="#16ae90"
                    android:onClick="pharm1"
                    android:id="@+id/tvid5a"
                    />

            </TableRow>
      </RelativeLayout>
    </android.support.v7.widget.CardView>
