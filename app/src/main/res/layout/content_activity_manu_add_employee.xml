<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/makat"
    android:layout_height="match_parent"
    tools:context="afyapepe.mobile.activity.ManuAddEmployee">
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!--tools:context="afyapepe.mobile.activity.ManuAddEmployee"-->
        <!--tools:showIn="@layout/manu_activity_addemployee">-->


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/icaccount"
            android:src="@drawable/ic_account_circle_black_36dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"


            />


        <TextView
            android:text="Create Employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="#000"

            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="Employee Name"
            android:background="@drawable/rounder"
            android:ems="10"
            android:layout_below="@+id/icaccount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/ename" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="#000"
            android:background="@drawable/rounder"
            android:inputType="text"
            android:gravity="center"
            android:hint="Role"
            android:ems="10"
            android:layout_below="@+id/ename"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/erole" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="#000"

            android:inputType="text"
            android:background="@drawable/rounder"
            android:gravity="center"
            android:hint="Email "
            android:layout_below="@+id/erole"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/eemail" />

        <TextView
            android:layout_width="55dp"
            android:gravity="center_horizontal"
            android:text="Job"

            android:id="@+id/espin2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/eemail"/>
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"

            android:hint="Employee Type"
           android:layout_below="@+id/eemail"
            android:layout_marginTop="20dp"
            android:id="@+id/egroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textColor="#000"

            android:inputType="textPassword"
            android:gravity="center"
            android:hint="Password"
            android:background="@drawable/rounder"
            android:ems="10"
            android:layout_below="@+id/egroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/eid" />

        <TextView
            android:layout_width="55dp"
            android:gravity="center"
            android:text="Region"

            android:id="@+id/eregionbase"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/eid"/>
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:text="Select"
            android:id="@+id/eregion"

            android:layout_below="@id/eid"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/eregion"
            android:background="@drawable/rounder"
            android:id="@+id/buttonSubmit" />

        <!--<Spinner-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:id="@+id/testspiner"-->
            <!--android:layout_below="@+id/eregion"-->

        <!--/>-->
        <!--<Button-->
            <!--android:text="View All "-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:layout_below="@+id/buttonSubmit"-->
            <!--android:id="@+id/buttonShow" />-->

    </RelativeLayout>
</ScrollView>
</FrameLayout>